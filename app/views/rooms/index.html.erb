<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Pice</th>
    <th>Avatar</th>
    <th>Desc</th>
    <th>Hotel</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.room_type %></td>
    <td><%= room.price %></td>
    <td><%= room.avatar %></td>
    <td><%= room.descs %></td>
    <td><%= room.hotel %></td>
    <td><%= room.quantity %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

